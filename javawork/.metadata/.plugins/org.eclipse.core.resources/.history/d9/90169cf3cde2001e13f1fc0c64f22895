package test01;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("점수를 입력");
		int kor = sc.nextInt();
		int eng = sc.nextInt();
		int math = sc.nextInt();
		
		
		

		System.out.printf("kor:%d점,eng:%d점,math:%d점,평균:%3.1f점",kor,eng,math,(kor+eng+math)/3.0);
		
		

	}

}
