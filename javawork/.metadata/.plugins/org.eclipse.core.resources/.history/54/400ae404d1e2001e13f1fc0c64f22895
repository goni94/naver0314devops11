package test01;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("점수를 입력");
		int kor = sc.nextInt();
		int eng = sc.nextInt();
		int math = sc.nextInt();
		int total = kor+eng+math;
		int max;
//		  max =  kor>eng ? kor:eng;
		  if (kor > eng) {
			  max = kor;
		  } else {
			  max = eng;
		  }
		  if (kor > math) {
			  max = kor;
		  } else {
			  max = math;
		  }
		  if (math > eng) {
			  max = math;
		  } else {
			  max = eng;
		  }
		

		System.out.printf("kor:%d점,eng:%d점,math:%d점,평균:%3.1f점,총점:%d",kor,eng,math,(kor+eng+math)/3.0,total,max);
		
		

	}

}
